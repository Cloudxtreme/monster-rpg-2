LIBS=-llua-fixed -ltgui $(ALLEGROLIBS) -lz -lopengl32 -lwinmm -lbass -lfreetype $(STATIC_LIBS) "c:\program files (x86)\microsoft directx sdk (august 2007)\lib\x86\d3dx9.lib"


default: monster2


monster2: $(CXX_LIBOBJS) $(OBJCXX_LIBOBJS) $(C_LIBOBJS) monster2.o
	g++ $(LINKFLAGS) -o monster2-d3d \
		$(CXX_LIBOBJS) $(OBJCXX_LIBOBJS) $(C_LIBOBJS) icon.res \
		monster2.o $(LIBS)

.cpp.o:
	$(CXX) $(CXXFLAGS) $(CFLAGS) -c $<

.c.o:
	$(CC) $(CFLAGS) -c $<

init.o: init.mm
	$(CXX) -x c++ $(CXXFLAGS) $(CFLAGS) -c init.mm

clean:
	-rm *.o
	-rm meditor2
	-rm monster2 monster2-quickdraw

