ALLEGROLIBS=-L"c:\a5_d3d\lib" -lallegro_shader-debug-static -lallegro_acodec-debug-static -lallegro_audio-debug-static -lallegro_dialog-debug-static -lallegro_primitives-debug-static -lallegro_ttf-debug-static -lallegro_font-debug-static -lallegro_image-debug-static -lallegro-debug-static -lallegro_main-debug-static
