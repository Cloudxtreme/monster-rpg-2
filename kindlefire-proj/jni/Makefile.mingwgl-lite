		$(CXX_LIBOBJS) $(OBJCXX_LIBOBJS) $(C_LIBOBJS) icon-lite.res \
		monster2.o $(LIBS)

.cpp.o:
	$(CXX) $(CXXFLAGS) $(CFLAGS) -c $<

.c.o:
	$(CC) $(CFLAGS) -c $<

init.o: init.mm
	$(CXX) -x c++ $(CXXFLAGS) $(CFLAGS) -c init.mm


