<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.nooskewl.monsterrpg2"
      android:versionCode="1"
      android:versionName="1.11">
    <application android:label="@string/app_name" android:debuggable="true" android:icon="@drawable/icon" android:theme="@style/NoActionBar">
        <activity android:name="AllegroActivity"
                  android:label="@string/app_name"
                  android:launchMode="singleTask"
                  android:screenOrientation="landscape"
                  android:configChanges="screenLayout|uiMode|orientation|screenSize|smallestScreenSize"
		   >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!--  Tell Allegro the name of the game .so when using dynamic linking -->
            <meta-data android:name="com.nooskewl.app_name"
                       android:value="monsterrpg2"/>
        </activity>
    </application>
    <uses-feature android:glEsVersion="0x00020000"/>
    <uses-sdk android:minSdkVersion="7"/>
    <uses-sdk android:targetSdkVersion="15"/>
    <!--<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest> 
